{
  "manifest_version": 2,
  "name": "Chrome Twitch Sideplayer",
  "description": "Twitch Sideplayer",
  "version": "0.02",
  "permissions": [
    "activeTab", "tabs"
  ],

  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": [
          "app.js"
      ],
      "run_at": "document_start",
      "css": ["index.css"]
  }],

  "browser_action": {
    "default_icon": "favicon.png",
    "default_title": "Twitch Sideplayer",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "web_accessible_resources": [ "index.html", "index.css", "x-circle.svg", "play-button.png" ],
  "permissions": [ "*://*/*", "storage"]
}
